{
  "name": "emojis-box",
  "version": "1.0.0",
  "description": "A library for working with emojis and emoticons",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts,jsx,tsx}\"",
    "test": "jest --config jestconfig.json",
    "test:coverage": "jest --config jestconfig.json --coverage",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run prettier && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alok-shete/emojis-box.git"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "emojis",
    "emoji",
    "emoji library",
    "emoji package",
    "emoji collection",
    "emoticons",
    "emoticon library",
    "emoticon package",
    "emoji picker",
    "emoji selector",
    "emoji utility",
    "emoji manager"
  ],
  "author": "Alok Shete",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alok-shete/emojis-box/issues"
  },
  "homepage": "https://github.com/alok-shete/emojis-box#readme",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.6",
    "@types/react": "^18.0.26",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.1",
    "jest": "^29.4.0",
    "jest-environment-jsdom": "^29.4.0",
    "prettier": "^2.8.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "typings": "dist/esm/index.d.ts"
}
